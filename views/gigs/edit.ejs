<% include ../partials/header %>

<div class="container table">
    <div>
        <h1 class="text-center mt-1">Edit <%= gig.event %></h1>
        <div>
            <form action="/gigs/<%= gig._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="gig[event]" value="<%= gig.event %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="gig[venue]" value="<%= gig.venue %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="gig[date]" value="<%= gig.date %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="gig[price]" value="<%= gig.price %>" min="0.01" step="0.01">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="gig[link]" value="<%= gig.link %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="gig[image]" value="<%= gig.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="gig[description]" value="<%= gig.description %>">
                </div>
				<div class="form-group">
    				<input class="form-control" type="text" name="location" id="location" value="<%= gig.location %>">
				</div>
                <div class="form-group text-center">
                    <button class="btn btn-outline-warning">Submit</button>
                </div>
            </form>
			<div class="text-center mb-1">
				<a href="/gigs" id="show">Go Back</a>
			</div>
        </div>
    </div>
</div>

<% include ../partials/footer %>