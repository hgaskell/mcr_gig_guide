<% include ../partials/header %>

<div class="container table">
    <div>
        <h3 class="text-center mt-1">Add New Comment to <%= gig.event %></h3>
        <div>
            <form action="/gigs/<%= gig._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-outline-warning">Submit!</button>
                </div>
				<div class="text-center mb-1">
					<a href="/gigs" id="show">Go Back</a>
				</div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>