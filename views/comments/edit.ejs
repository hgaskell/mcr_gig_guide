<% include ../partials/header %>

<div class="container table">
    <div>
        <h3 class="text-center mt-1">Edit Comment</h3>
        <div>
            <form action="/gigs/<%= gig_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-outline-warning">Submit!</button>
                </div>
            </form>
			<div class="text-center mb-1">
            	<a href="/gigs" id="show">Go Back</a>
			</div>
        </div>
    </div>
</div>

<% include ../partials/footer %>